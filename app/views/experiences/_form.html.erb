<%= simple_form_for @experience do |f| %>
  <%= f.input :title, label: "Title" %>
  <%= f.input :description, label: "Description" %>
  <%= f.input :location, label: "Location" %>
  <%= f.input :price, label: "Price" %>
  <%= f.input :activity, as: :select, collection: Experience::ACTIVITIES, prompt: 'Select Activity Type', label: false  %>
  <%= f.input :max_guests, label: "Max nr. of Guests" %>
  <%= f.input :meeting_point, label: "Meeting Point" %>
  <%= f.input :policies, label: "Policies" %>
  <%= f.input :activity_effort, as: :select, collection: Experience::ACTIVITY_EFFORTS, prompt: 'Select Activity Effort', label: false  %>
  
  <%= f.submit "Add my Experience",  class: 'btn btn-warning mb-5' %>
<% end %>
