<div class="banner-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @experience.photo.key, height: 300, crop: :fill %>')">
  <h1><%= @experience.title %></h1>
  <p><%= @experience.description[0,128] %>...</p>
</div>

<div class="container">
  <div class="row my-3">
    <div class="col-8 align-items-start d-flex py-3 flex-column">
      <div class="py-3"><h3>A bit more about this experience...</h3></div>
        <div><p><%= @experience.description %></p></div>
          <div class="py-4">
            <h3>Policies</h3>
            <%= @experience.policies %>
          </div>
        <div class="py-4">
          <h3>Location info</h3>
          <h4>Meeting info</h4>
          <%= @experience.meeting_point %>
         <br><br><br>
        
        <div id="map" src='https://api.mapbox.com/styles/v1/mapbox/streets-v11/static/2.3381,48.8693,10.45,0,0/600x1000?access_token=pk.eyJ1IjoicG9wcHlqZW5uaW5ncyIsImEiOiJja2xjZGdjdXIxZXJ1Mm9sYm0ycGRyNjJvIn0.L3m2Fuc9wxwHdOgZ6lLUkw' style="width: 100%; height: 50vh;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

     <div class="cards-map">
        <div class="cards px-3">
          <% @experiences.each do |experience| %>
            <div class="card-trip">
              <%= cl_image_tag experience.photo.key %>

              <div class="card-trip-infos">
                <div>
                  <h2><%= link_to experience.title, experience %></h2>
                  <p>Short description here! <%= experience.description.slice(0..30) %></p>
                </div>
                <p class="card-trip-pricing">€<%= experience.price %></p>
              </div>
            </div>
          <% end %>
        </div>
      </div>

    </div>

    <div class="col-4">
          <div class="xp-booking-details">
            <div class="my-1"><b>Price per person: € <%= @experience.price %> per day</b></div>
            <div class="my-3"><b>Max Number of people: <%= @experience.max_guests %></b></div>
            <%= render 'booking_form', experience: @experience %>
      </div>

     

     

    </div>




  </div>


<!--     <div class="col-4 py-2">
    Last updated on: <%= @experience.updated_at %>
    </div> -->

  </div>

</div>
