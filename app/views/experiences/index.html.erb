<div class="container my-3">
  <form class="search-input" action="/experiences">
    <label for="location">Location</label>
    <input id="location" type="text" name="location" placeholder="Barcelona">
    <label for="start-date">Start-Date</label>
    <input id="start-date" type="text" name="start-date" placeholder="<%= Date.today.strftime('%F') %>">
    <label for="end-date">End-Date</label>
    <input id="end-date" type="text" name="end-date" placeholder="<%= (Date.today + 3).strftime('%F') %>">
    <button class="btn search" type="submit">
                <i class="fa fa-search"></i>
            </button>

  </form>
